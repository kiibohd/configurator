{
  "name": "kiibohd-configurator",
  "version": "1.2.0",
  "description": "Configuration utility for Input Club keyboards",
  "author": "Jeremy Bondeson <jbondeson@gmail.com> (https://input.club)",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "rebuild-deps": "electron-builder install-app-deps",
    "lint": "eslint src/**/*.ts*",
    "validate-typescript": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiibohd/configurator"
  },
  "electronWebpack": {
    "title": true,
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.54",
    "@mdi/font": "^5.6.55",
    "bluebird": "^3.7.2",
    "chroma-js": "^2.1.0",
    "classnames": "^2.2.6",
    "command-exists": "^1.2.9",
    "compare-versions": "^3.6.0",
    "he": "^1.2.0",
    "isomorphic-git": "^1.7.8",
    "jszip": "^3.5.0",
    "localforage": "^1.9.0",
    "lodash": "^4.17.20",
    "loglevel": "^1.7.0",
    "mdi-material-ui": "^6.19.0",
    "mkdirp": "^1.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "source-map-support": "^0.5.19",
    "url-join": "^4.0.1",
    "usb": "^1.6.3"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@types/bluebird": "^3.5.32",
    "@types/classnames": "^2.2.10",
    "@types/command-exists": "^1.2.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/he": "^1.1.1",
    "@types/jszip": "^3.4.1",
    "@types/lodash": "^4.14.161",
    "@types/mkdirp": "^1.0.1",
    "@types/react": "^16.9.49",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "@types/url-join": "^4.0.0",
    "@types/usb": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "electron": "^8.5.2",
    "electron-builder": "^22.8.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-eslint": "^6.0.0",
    "electron-webpack-ts": "^4.0.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^4.44.2"
  },
  "resolutions": {
    "upath": "^1.2.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0"
  },
  "build": {
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "buildDependenciesFromSource": true,
    "productName": "Kiibohd Configurator",
    "appId": "club.input.KiibohdConfigurator",
    "asar": true,
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null,
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "executableName": "kiibohd-configurator",
      "vendor": "Input Club",
      "category": "Utility"
    },
    "directories": {
      "buildResources": "build",
      "output": "output"
    },
    "publish": {
      "provider": "github"
    }
  }
}
